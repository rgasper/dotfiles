{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "*": "allow",
    "webfetch": "ask",
    "kagimcp_kagi_search_fetch": "ask"
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "kagimcp": {
      "type": "local",
      "command": ["uvx", "-p", "3.13", "kagimcp"],
      "enabled": true,
      "environment": {
        "KAGI_API_KEY": "SECRETSECRET"
      }
    },
    "linear": {
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://mcp.linear.app/mcp"],
      "enabled": true,
    }
  },
  "default_agent": "plan",
  "agent": {
    "plan": {
      "mode": "primary",
      "model": "amazon-bedrock/anthropic.claude-opus-4-5-20251101-v1:0",
      "tools": {
        "write": false,
        "edit": false,
        "linear*": false,
      },
      "permission":{
        "bash": "ask"
      }
    },
    "build": {
      "mode": "primary",
      "model": "amazon-bedrock/anthropic.claude-opus-4-5-20251101-v1:0",
      "tools": {
        "linear*": false
      },
    },
    "explore": {
      "description": "explores codebase and summarizes findings",
      "mode": "subagent",
      "model": "amazon-bedrock/anthropic.claude-haiku-4-5-20251001-v1:0",
      "tools": {
        "write": false,
        "edit": false,
        "linear*": false,
      },
      "permission":{
        "bash": "ask"
      }
    },
    "project_manager": {
      "description": "reads and writes tickets & projects",
      "mode": "subagent",
      "model": "amazon-bedrock/anthropic.claude-opus-4-5-20251101-v1:0",
      "tools": {
        "write": false,
        "edit": false,
        "linear*": true,
      },
      "permission":{
        "bash": "ask"
      },
    }
  },
  "lsp": {
    "ty": {
      "command": ["ty", "server"],
      "extensions": [".py", ".pyi", ".py3"]
    }
  }
}
